@model HomeViewModel
@{
    ViewData["Title"] = "Página Inicial";
}
<section class="hero-section" style="background-image: url('/images/banner.png');">
    <div class="overlay"></div>
    <div class="container py-5">
        <div style="max-width: 576px;">
            <h2 class="display-3 fw-bolder mb-4 text-white"><span>ML3</span> Peças Automotivas</h2>
            <p class="lead mb-4 text-white">Encontre as melhores peças para seu veículo com garantia e entrega rápida.</p>
            <a href="@Url.Action("Index", "Catalogo")" class="btn btn-primary btn-lg fw-bold py-3 px-4">Ver Catálogo</a>
        </div>
    </div>
</section>

<section class="bg-white">
    </section>

<section class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Categorias</h2>
        <p class="text-muted">Encontre rapidamente o que precisa para seu veículo</p>
    </div>

    <div class="d-flex justify-content-center flex-wrap gap-3">
        
        <a href="@Url.Action("Index", "Catalogo", new { CurrentCategory = "Elétrica" })" class="text-decoration-none col-lg-2 col-md-4 col-sm-6">
            <div class="card category-card p-3">
                <div class="card-body text-center">
                    <i data-lucide="zap" class="text-primary mb-2"></i>
                    <h6 class="fw-semibold mb-0">Elétrica</h6>
                </div>
            </div>
        </a>

        <a href="@Url.Action("Index", "Catalogo", new { CurrentCategory = "Freios" })" class="text-decoration-none col-lg-2 col-md-4 col-sm-6">
            <div class="card category-card p-3">
                <div class="card-body text-center">
                    <i data-lucide="disc-3" class="text-primary mb-2"></i>
                    <h6 class="fw-semibold mb-0">Freios</h6>
                </div>
            </div>
        </a>
        
        <a href="@Url.Action("Index", "Catalogo", new { CurrentCategory = "Motor" })" class="text-decoration-none col-lg-2 col-md-4 col-sm-6">
            <div class="card category-card p-3">
                <div class="card-body text-center">
                    <i data-lucide="settings" class="text-primary mb-2"></i>
                    <h6 class="fw-semibold mb-0">Motor</h6>
                </div>
            </div>
        </a>

        <a href="@Url.Action("Index", "Catalogo", new { CurrentCategory = "Fluidos" })" class="text-decoration-none col-lg-2 col-md-4 col-sm-6">
            <div class="card category-card p-3">
                <div class="card-body text-center">
                    <i data-lucide="flask-conical" class="text-primary mb-2"></i>
                    <h6 class="fw-semibold mb-0">Fluidos</h6>
                </div>
            </div>
        </a>
        
        <a href="@Url.Action("Index", "Catalogo", new { CurrentCategory = "Suspensão" })" class="text-decoration-none col-lg-2 col-md-4 col-sm-6">
            <div class="card category-card p-3">
                <div class="card-body text-center">
                    <i data-lucide="wrench" class="text-primary mb-2"></i>
                    <h6 class="fw-semibold mb-0">Suspensão</h6>
                </div>
            </div>
        </a>
        
    </div>
</section>

<section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div><h2 class="h1 fw-bold">Produtos em Destaque</h2><p class="text-muted mt-2">Selecionamos os melhores produtos para você</p></div>
        <a href="@Url.Action("Index", "Catalogo")" class="btn btn-outline-secondary">Ver Todos</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col">
                <partial name="_ProductCard" model="product" />
            </div>
        }
    </div>
</section>