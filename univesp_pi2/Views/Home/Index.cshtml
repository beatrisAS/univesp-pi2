@model HomeViewModel
@{
    ViewData["Title"] = "Página Inicial";
}
<section class="hero-section" style="background-image: url('/images/banner.png');">
    <div class="overlay"></div>
    <div class="container py-5">
        <div style="max-width: 576px;">
            <h2 class="display-3 fw-bolder mb-4 text-white"><span>ML3</span> Peças Automotivas</h2>
            <p class="lead mb-4 text-white">Encontre as melhores peças para seu veículo com garantia e entrega rápida.</p>
            <a href="@Url.Action("Index", "Catalogo")" class="btn btn-primary btn-lg fw-bold py-3 px-4">Ver Catálogo</a>
        </div>
    </div>
</section>

<section class="bg-white">
    </section>

<section class="container py-5">
    <div class="text-center mb-5">
        <h2 class="h1 fw-bold">Categorias</h2>
        <p class="text-muted mt-2">Encontre rapidamente o que precisa para seu veículo</p>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3">
        @foreach (var category in Model.Categories)
        {
            <div class="col">
                <a href="@Url.Action("Index", "Catalogo", new { CurrentCategory = category.Id })" class="category-card card text-decoration-none text-dark shadow-sm h-100 d-flex flex-column justify-content-center align-items-center p-3">
                    <i data-lucide="@category.Icon" class="mb-2"></i>
                    <span class="fw-semibold">@category.Name</span>
                </a>
            </div>
        }
    </div>
</section>

<section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div><h2 class="h1 fw-bold">Produtos em Destaque</h2><p class="text-muted mt-2">Selecionamos os melhores produtos para você</p></div>
        <a href="@Url.Action("Index", "Catalogo")" class="btn btn-outline-secondary">Ver Todos</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col">
                <partial name="_ProductCard" model="product" />
            </div>
        }
    </div>
</section>