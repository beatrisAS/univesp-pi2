<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ML3 Peças Automotivas</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link href="~/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="shadow-sm sticky-top">
        <div class="container py-3 d-flex justify-content-between align-items-center bg-white">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                <div class="bg-brand-orange p-2 rounded">
                    <i data-lucide="wrench" class="text-white"></i>
                </div>
                <div class="ms-3">
                    <h1 class="h5 mb-0 fw-bold" style="color: var(--dark-blue-primary);">ML3 Peças Automotivas</h1>
                    <p class="small text-muted mb-0">Sua oficina online</p>
                </div>
            </a>

           
            <div class="d-none d-md-flex w-50">
                <form asp-controller="Catalogo" asp-action="Index" method="get" class="input-group">
                    <input type="text" name="CurrentSearch" class="form-control" placeholder="Buscar peças por nome, código ou modelo..." aria-label="Buscar peças">
                    <button class="btn bg-brand-orange text-white hover-bg-brand-orange" type="submit"><i data-lucide="search"></i></button>
                </form>
            </div>

            <div class="d-flex align-items-center">
                <a asp-controller="Login" asp-action="Index" class="d-flex align-items-center text-secondary text-decoration-none me-4">
                    <i data-lucide="user" class="me-2"></i>
                    <span class="fw-semibold">Entrar</span>
                </a>
                <a asp-controller="Cart" asp-action="Index" class="text-secondary">
                    <i data-lucide="shopping-cart"></i>
                </a>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue-primary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Página Inicial" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Catálogo de Produtos" ? "active" : "")" asp-controller="Catalogo" asp-action="Index">Catálogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalogo" asp-action="Index" asp-route-CurrentCategory="Ofertas">Ofertas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contato</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center text-white small">
                    <span class="text-muted me-3">Categorias:</span>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-CurrentCategory="Freios" class="d-flex align-items-center nav-link py-0 me-3"><i data-lucide="disc-3" class="me-1" style="width:16px;"></i> Freios</a>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-CurrentCategory="Motor" class="d-flex align-items-center nav-link py-0 me-3"><i data-lucide="car-engine" class="me-1" style="width:16px;"></i> Motor</a>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-CurrentCategory="Suspensão" class="d-flex align-items-center nav-link py-0 me-3"><i data-lucide="wrench" class="me-1" style="width:16px;"></i> Suspensão</a>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-CurrentCategory="Elétrica" class="d-flex align-items-center nav-link py-0"><i data-lucide="lightbulb" class="me-1" style="width:16px;"></i> Elétrica</a>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark-blue-secondary text-light">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-brand-orange p-2 rounded">
                            <i data-lucide="wrench" class="text-white"></i>
                        </div>
                        <h5 class="ms-3 mb-0 text-white">ML3 Peças Automotivas</h5>
                    </div>
                    <p class="small text-muted">Sua loja online de autopeças com os melhores preços e qualidade garantida.</p>
                    <div class="mt-4">
                        <a href="#" class="text-muted me-3"><i data-lucide="facebook"></i></a>
                        <a href="#" class="text-muted me-3"><i data-lucide="instagram"></i></a>
                        <a href="#" class="text-muted"><i data-lucide="twitter"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold text-white mb-4">Links Úteis</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Catalogo" asp-action="Index" class="text-muted text-decoration-none">Catálogo de Produtos</a></li>
                        <li class="mb-2"><a asp-controller="Catalogo" asp-action="Index" asp-route-CurrentCategory="Ofertas" class="text-muted text-decoration-none">Ofertas Especiais</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Como Comprar</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Política de Troca</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold text-white mb-4">Atendimento</h5>
                    <ul class="list-unstyled small text-muted">
                        <li class="d-flex align-items-center mb-2"><i data-lucide="phone" class="me-2" style="width:16px;"></i> (11) 3000-0000</li>
                        <li class="d-flex align-items-center mb-2"><i data-lucide="mail" class="me-2" style="width:16px;"></i> contato@ml3pecas.com.br</li>
                        <li class="d-flex align-items-center mb-2"><i data-lucide="map-pin" class="me-2" style="width:16px;"></i> Rua M L Três, 123 - SP</li>
                        <li class="d-flex align-items-center mb-2"><i data-lucide="clock" class="me-2" style="width:16px;"></i> Seg à Sex: 8h às 18h</li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="fw-bold text-white mb-4">Newsletter</h5>
                    <p class="small text-muted mb-3">Receba ofertas e novidades em primeira mão.</p>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Seu melhor e-mail">
                        <button class="btn bg-brand-orange text-white hover-bg-brand-orange" type="button">Cadastrar</button>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center small">
                <p class="mb-2 mb-sm-0">&copy; @DateTime.Now.Year - ML3 Peças Automotivas. Todos os direitos reservados.</p>
                <div class="d-flex align-items-center">
                    <span class="me-2">Formas de Pagamento:</span>
                    <img src="https://placehold.co/100x20/ffffff/000000?text=VISA+MASTER" alt="Formas de Pagamento">
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        lucide.createIcons();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
