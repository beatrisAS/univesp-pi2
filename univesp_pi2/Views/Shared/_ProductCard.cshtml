@model Product

<div class="card h-100 product-card shadow-sm">
    <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@Model.Id">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
    </a>
    <div class="card-body d-flex flex-column">
        <div>
            <div class="d-flex justify-content-between align-items-start">
                <p class="text-muted small mb-1">@Model.Brand</p>
                <span class="badge bg-light text-dark-emphasis fw-bold border">
                    <i data-lucide="star" style="width:12px; height:12px; fill:currentColor; color: #facc15;"></i> @Model.Rating
                </span>
            </div>
            <h3 class="card-title fs-5 fw-bold">
                <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@Model.Id" class="text-dark text-decoration-none">
                    @Model.Name
                </a>
            </h3>
        </div>
        <div class="mt-auto">
            <p class="product-price mb-0 mt-3">@Model.FinalPrice.ToString("C")</p>
            <p class="text-muted small">ou 3x de @((Model.FinalPrice / 3).ToString("C"))</p>
            <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@Model.Id" class="btn btn-primary w-100 fw-bold mt-2">
                <i data-lucide="shopping-cart" style="width:18px;"></i> Comprar
            </a>
        </div>
    </div>
</div>