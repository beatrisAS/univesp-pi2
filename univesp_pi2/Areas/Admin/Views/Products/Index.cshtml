@model List<Product>
@using univesp_pi2.Models;
@{ ViewData["Title"] = "Gerenciamento de Produtos"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0">Gerenciamento de Produtos</h4>
</div>

<div class="card">
    <div class="card-body">
        <table class="table align-middle table-hover">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Código</th>
                    <th>Categoria</th>
                    <th>Preço</th>
                    <th>Estoque</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@product.ImageUrl" width="40" class="rounded me-3 border" />
                                <div>
                                    <p class="fw-semibold mb-0">@product.Name</p>
                                    <small class="text-muted">@product.Brand</small>
                                </div>
                            </div>
                        </td>
                        <td>@product.Code</td>
                        <td><span class="badge bg-light text-dark border">@product.Category</span></td>
                        <td>@product.FinalPrice.ToString("C")</td>
                        <td>
                            @if (product.IsInStock)
                            {
                                <span class="badge bg-success-subtle text-success-emphasis border border-success-subtle">Em estoque</span>
                            }
                            else
                            {
                                <span class="badge bg-danger-subtle text-danger-emphasis border border-danger-subtle">Sem estoque</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>